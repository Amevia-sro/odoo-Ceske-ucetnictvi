<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">inherit.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="priority">4</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="travel_service" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="used_goods" attrs="{'invisible': [('type', '!=', 'product')]}"/>
            </field>
        </field>
    </record>
</odoo>
